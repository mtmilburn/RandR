<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head-tag.ejs', {title: `Edit ${projects.title} | R and R`}) %>
    <!-- <link rel="stylesheet" href="/styles/project-form.css"> -->
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="project-person">
        <h2>Edit a Project</h2>
        
    </section>

    <form method="POST" action="/projects/<%= project._id %>?_method=PUT">
        <!-- Title input -->
        <label for="title">Project title:</label>
        <input type="text" id="title" name="title" required>
        <br>
        <!-- Category input -->
        <label for="category">Category:</label>
        <input type="text" id="category" name="category" min="0" required>
        <br>
        <!-- Status input -->
        <label for="status">status:</label>
        <input type="text" id="status" name="status" value="Unknown">
        <br>
        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" required>
        <br>
        <!-- Description input -->
        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea>
        <br> 
        <input type="submit" value="Edit Project">
    </form>

   
</body>

</html>

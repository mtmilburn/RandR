<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head-tag.ejs', {title: 'R and R'}) %>
    <link rel="stylesheet" href="/styles/projects.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="project-title">
        <h2>Projects</h2>
        
    </section>

    <main>
        <section class="past-projects">
            <ul>
                <% for (let project of projects) { %>
                <li>
                    <figure>
                        <img src="<%= project.photo %>">
                        <figcaption>
                            <h4><%= project.title %></h4>
                            <a href="/projects/<%= project._id %>">Get details/leave reviews</a>
                        </figcaption>
                    </figure>
                </li>
                <% } %>
            </ul>
        </section>
    </main>

    
</body>

</html>
